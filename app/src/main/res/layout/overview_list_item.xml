<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView_eventIdentifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/textView_eventDatetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="something"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/imageView_eventIdentifier"
        app:layout_constraintStart_toEndOf="@id/imageView_eventIdentifier"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/textView_eventDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="something"
        app:layout_constraintTop_toBottomOf="@id/textView_eventDatetime"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@id/imageView_eventIdentifier"
        android:layout_marginStart="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>